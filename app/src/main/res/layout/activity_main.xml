<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/testText"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:text="Первое активити для запуска неявного интента"
        android:textColor="#FF00D6"
        app:layout_constraintVertical_bias=".35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/implicit_intent_btn1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:strokeWidth="2dp"
        app:strokeColor="#FF00D6"
        android:text="Загрузить фото из галереи"
        android:textColor="#FF00D6"
        android:textSize="13sp"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintVertical_bias=".3"
        app:cornerRadius="55dp"
        app:layout_constraintTop_toBottomOf="@+id/testText"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>