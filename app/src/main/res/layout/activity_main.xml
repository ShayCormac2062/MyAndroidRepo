<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/clock"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/clock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".15"/>

    <TextView
        android:id="@+id/selected_time"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/no_selected_time"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/select_time_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/choose_time"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toTopOf="@+id/run_time_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_time"
        app:layout_constraintVertical_chainStyle="packed"
        app:strokeColor="@color/teal_700"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/run_time_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/select_time_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/delete_alarm_btn"
        android:layout_marginHorizontal="20dp"
        app:strokeColor="@color/teal_700"
        android:textAllCaps="false"
        android:text="@string/run_time"
        android:textSize="18sp"
        app:cornerRadius="14dp"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_alarm_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/delete_time"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/run_time_btn"
        app:strokeColor="@color/teal_700"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>