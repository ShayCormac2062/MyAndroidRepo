<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/moyo_hlebalo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/name_of_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Имя"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/change"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/change_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:text="Имя"
                android:textSize="17sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:id="@+id/surname_of_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Фамилия"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/change"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/name_of_user"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/change_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фамилия"
                android:textSize="17sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.19"
                app:layout_constraintStart_toEndOf="@+id/change_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:text="Статус"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/avatar"
                app:layout_constraintTop_toBottomOf="@+id/name_of_user" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/status_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Статус"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/avatar"
                app:layout_constraintTop_toBottomOf="@+id/change_name" />

            <TextView
                android:id="@+id/online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:text="online"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/avatar"
                app:layout_constraintTop_toBottomOf="@+id/status" />

            <Button
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#F4F3F3"
                android:text="Редактировать"
                android:textSize="12sp"
                android:textColor="#7095FF"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/avatar"
                tools:layout_editor_absoluteX="17dp" />

            <Button
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#F4F3F3"
                android:text="Подтвердить"
                android:textColor="#7095FF"
                android:textSize="12sp"
                android:visibility="gone"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/avatar"
                tools:layout_editor_absoluteX="10dp" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/post"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:src="@drawable/photo_camera"
                app:layout_constraintBottom_toBottomOf="@+id/divider"
                app:layout_constraintEnd_toStartOf="@+id/stories"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/avatar"/>

            <ImageButton
                android:id="@+id/stories"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginBottom="12dp"
                android:background="@null"
                android:src="@drawable/pencil"
                app:layout_constraintBottom_toBottomOf="@id/divider"
                app:layout_constraintEnd_toStartOf="@+id/add_photo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/post" />

            <ImageButton
                android:id="@+id/add_photo"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginBottom="12dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                app:layout_constraintBottom_toBottomOf="@id/divider"
                app:layout_constraintEnd_toStartOf="@id/clip"
                app:layout_constraintStart_toEndOf="@+id/stories" />

            <ImageButton
                android:id="@+id/clip"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginBottom="12dp"
                android:background="@null"
                android:src="@drawable/clip"
                app:layout_constraintBottom_toBottomOf="@id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/add_photo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="История"
                android:textColor="#7095FF"
                app:layout_constraintBottom_toBottomOf="@id/divider"
                app:layout_constraintEnd_toEndOf="@+id/post"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/post"
                app:layout_constraintTop_toTopOf="@+id/post"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Запись"
                android:textColor="#7095FF"
                app:layout_constraintBottom_toBottomOf="@id/divider"
                app:layout_constraintEnd_toEndOf="@+id/stories"
                app:layout_constraintHorizontal_bias=".5"
                app:layout_constraintStart_toStartOf="@+id/stories"
                app:layout_constraintTop_toTopOf="@+id/stories" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Фото"
                android:textColor="#7095FF"
                app:layout_constraintBottom_toBottomOf="@id/divider"
                app:layout_constraintEnd_toEndOf="@+id/add_photo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/add_photo"
                app:layout_constraintTop_toTopOf="@+id/add_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Клип"
                android:textColor="#7095FF"
                app:layout_constraintBottom_toBottomOf="@id/divider"
                app:layout_constraintEnd_toEndOf="@+id/clip"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/clip"
                app:layout_constraintTop_toTopOf="@+id/clip"/>

            <TextView
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DAD7D7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/post" />

            <ImageView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/divider" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="12dp"
                android:text="Город: Казань"
                android:textColor="#686868"
                app:layout_constraintStart_toEndOf="@+id/home"
                app:layout_constraintTop_toTopOf="@id/divider" />

            <ImageView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="15dp"
                android:text="Почта"
                android:textColor="#686868"
                app:layout_constraintStart_toEndOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/city" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/address_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:text="Почта"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/city" />

            <Button
                android:id="@+id/change_email"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:text="изменить"
                android:textColor="#2356EC"
                android:textSize="6sp"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="@id/email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toEndOf="@+id/email" />

            <Button
                android:id="@+id/confirm_email"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/white"
                android:text="подтвердить"
                android:textColor="#2356EC"
                android:textSize="6sp"
                android:visibility="gone"
                app:cornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="@id/email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toEndOf="@+id/email" />

            <ImageView
                android:id="@+id/followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/followers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="13dp"
                android:text="59 подписчиков"
                android:textColor="#686868"
                app:layout_constraintStart_toEndOf="@id/followers"
                app:layout_constraintTop_toBottomOf="@id/email" />

            <ImageView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/gender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/followers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="13dp"
                android:text="Пол: мужской (нет, блин, ламинат)"
                android:textColor="#686868"
                app:layout_constraintStart_toEndOf="@id/gender"
                app:layout_constraintTop_toBottomOf="@+id/followers" />

            <ImageView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_info_24"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Подробная информация"
                android:textColor="#7095FF"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/divider2"
                app:layout_constraintStart_toEndOf="@id/info"
                app:layout_constraintTop_toBottomOf="@+id/gender"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DAD7D7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info" />

            <TextView
                android:id="@+id/friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:text="Друзья:"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

            <TextView
                android:id="@+id/amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="15dp"
                android:text="3"
                app:layout_constraintStart_toEndOf="@+id/friends"
                app:layout_constraintTop_toBottomOf="@id/divider2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/irishka"
                app:layout_constraintEnd_toStartOf="@+id/friend2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friends" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/vonuchiy_perdun"
                app:layout_constraintEnd_toStartOf="@+id/friend3"
                app:layout_constraintStart_toEndOf="@+id/friend1"
                app:layout_constraintTop_toBottomOf="@+id/friends" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friend3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/yanka"
                app:layout_constraintStart_toEndOf="@+id/friend2"
                app:layout_constraintTop_toBottomOf="@+id/friends" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="Ирина Пискун"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="@+id/friend1"
                app:layout_constraintStart_toStartOf="@+id/friend1"
                app:layout_constraintTop_toTopOf="@id/friend1" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Михаил Абрамов"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="@+id/friend2"
                app:layout_constraintStart_toStartOf="@+id/friend2"
                app:layout_constraintTop_toTopOf="@id/friend2" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Яна Смит"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="@+id/friend3"
                app:layout_constraintStart_toStartOf="@+id/friend3"
                app:layout_constraintTop_toTopOf="@id/friend3" />

            <TextView
                android:id="@+id/divider25"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="105dp"
                android:background="#DAD7D7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friends" />

            <TextView
                android:id="@+id/photo_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фотографии:"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/divider25"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toBottomOf="@id/divider25"
                app:layout_constraintStart_toEndOf="@id/photo_amount"/>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/moyo_hlebalo"
                app:layout_constraintBottom_toBottomOf="@+id/big_divider1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/photo_amount" />

            <TextView
                android:id="@+id/big_divider1"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="150dp"
                android:background="#DAD7D7"
                app:layout_constraintTop_toBottomOf="@+id/photo_amount"/>

            <Button
                android:id="@+id/add_post"
                android:layout_width="320dp"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="#F4F3F3"
                android:text="Создать запись"
                android:textColor="#7095FF"
                android:textSize="10sp"
                app:cornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/big_divider1"
                app:layout_constraintBottom_toTopOf="@+id/big_divider2" />


            <ImageButton
                android:id="@+id/new_photo_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                app:layout_constraintStart_toEndOf="@+id/add_post"
                app:layout_constraintTop_toBottomOf="@+id/big_divider1"
                app:layout_constraintBottom_toTopOf="@+id/big_divider2"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:src="@drawable/clip"
                app:layout_constraintStart_toEndOf="@+id/new_photo_add"
                app:layout_constraintTop_toBottomOf="@+id/big_divider1"
                app:layout_constraintBottom_toTopOf="@+id/big_divider2"/>

            <TextView
                android:id="@+id/big_divider2"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="55dp"
                android:background="#DAD7D7"
                app:layout_constraintTop_toBottomOf="@+id/big_divider1"/>

            <TextView
                android:id="@+id/vse_zapisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Все записи"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/big_divider2"
                app:layout_constraintBottom_toTopOf="@+id/divider3"/>

            <TextView
                android:id="@+id/moi_zapisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мои записи"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/vse_zapisi"
                app:layout_constraintTop_toBottomOf="@+id/big_divider2"
                app:layout_constraintBottom_toTopOf="@+id/divider3"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lupa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".95"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/big_divider2"
                app:layout_constraintBottom_toBottomOf="@+id/divider3"
                app:layout_constraintStart_toEndOf="@+id/moi_zapisi"/>

            <TextView
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="#DAD7D7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/big_divider2" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_avatar"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/moyo_hlebalo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/divider3" />

            <TextView
                android:id="@+id/name_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Имя Фамилия"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/user_avatar"
                app:layout_constraintTop_toTopOf="@id/divider3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/name_surname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_constraintStart_toEndOf="@+id/name_surname"
                app:layout_constraintHorizontal_bias="0.96"/>

            <TextView
                android:id="@+id/updated_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textSize="12sp"
                android:text="Обновил свою фотографию на странице"
                app:layout_constraintStart_toEndOf="@+id/user_avatar"
                app:layout_constraintTop_toBottomOf="@+id/name_surname" />

            <TextView
                android:id="@+id/updated_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:textSize="12sp"
                android:text="29 мая 2020 года в 14:39"
                app:layout_constraintStart_toEndOf="@+id/user_avatar"
                app:layout_constraintTop_toBottomOf="@+id/updated_text" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/new_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/moyo_hlebalo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/updated_at" />

            <TextView
                android:id="@+id/cherta"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DAD7D7"
                app:layout_constraintTop_toBottomOf="@+id/new_photo" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:foregroundGravity="fill"
                android:src="@drawable/like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cherta"
                app:tint="#FF0000" />

            <TextView
                android:id="@+id/like_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="15dp"
                android:text="50"
                android:textColor="#FF0000"
                app:layout_constraintStart_toEndOf="@+id/like"
                app:layout_constraintTop_toBottomOf="@+id/cherta" />

            <ImageView
                android:id="@+id/comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/comment"
                app:layout_constraintStart_toEndOf="@+id/like_amount"
                app:layout_constraintTop_toBottomOf="@+id/cherta" />

            <TextView
                android:id="@+id/comment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="15dp"
                android:text="3"
                android:textColor="#7095FF"
                app:layout_constraintStart_toEndOf="@+id/comment"
                app:layout_constraintTop_toBottomOf="@+id/cherta" />

            <ImageView
                android:id="@+id/shared"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/shared"
                app:layout_constraintStart_toEndOf="@+id/comment_amount"
                app:layout_constraintTop_toBottomOf="@+id/cherta" />

            <TextView
                android:id="@+id/shared_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="15dp"
                android:text="1"
                android:textColor="#7095FF"
                app:layout_constraintStart_toEndOf="@+id/shared"
                app:layout_constraintTop_toBottomOf="@+id/cherta" />

            <TextView
                android:id="@+id/watch_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="10dp"
                android:text="892"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cherta"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/watch"
                app:layout_constraintEnd_toStartOf="@+id/watch_amount"
                app:layout_constraintTop_toBottomOf="@+id/cherta" />

            <TextView
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#DAD7D7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/watch_amount" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>