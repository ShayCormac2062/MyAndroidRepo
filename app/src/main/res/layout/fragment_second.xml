<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SecondFragment"
    android:background="@drawable/bottom_navigation_gradient">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/element_view"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_element_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#8F143E"
        android:contentDescription="@string/fab_transformation_scrim_behavior"
        android:src="@drawable/ic_baseline_add_24"
        app:fabCustomSize="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>