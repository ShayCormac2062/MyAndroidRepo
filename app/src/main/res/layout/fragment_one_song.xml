<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/music_player_gradient"
    tools:context=".ui.fragment.OneSongFragment">

    <ImageView
        android:id="@+id/track_cover"
        android:layout_width="285dp"
        android:layout_height="285dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintVertical_bias=".3"/>

    <TextView
        android:id="@+id/track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/track_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="Название песни"
        android:textSize="23sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/track_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/track_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="Автор песни"
        android:textSize="18sp"
        android:textColor="#787878"/>

        <ImageButton
            android:id="@+id/previous_track"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/previous"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/track_author"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/resume_track"/>

    <ImageButton
        android:id="@+id/resume_track"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/pause"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/previous_track"
        app:layout_constraintTop_toBottomOf="@id/track_author"
        app:layout_constraintEnd_toStartOf="@+id/next_track"/>

    <ImageButton
        android:id="@+id/next_track"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/next"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/resume_track"
        app:layout_constraintTop_toBottomOf="@id/track_author"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>